{
    "python.analysis.disableTaggedHints": true,
    "python.analysis.typeEvaluation.strictDictionaryInference": true,
    "python.analysis.typeEvaluation.enableExperimentalFeatures": true,
    "python.analysis.typeEvaluation.strictListInference": true,
    "python.analysis.generateWithTypeAnnotation": true,
    "python.analysis.typeCheckingMode": "standard",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "chat.mcp.discovery.enabled": {
        "claude-desktop": true,
        "cursor-global": true,
        "cursor-workspace": true
    },
    "chat.mcp.gallery.enabled": true,
    "chat.agent.thinking.collapsedTools": "all",
    "chat.agent.thinkingStyle": "collapsedPreview",
    "chat.customAgentInSubagent.enabled": true,
    "chat.todoListTool.writeOnly": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./DailyAccomplishments",
        "-p",
        "*test.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true
}
