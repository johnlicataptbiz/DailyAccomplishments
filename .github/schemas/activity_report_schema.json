{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ActivityReport",
  "type": "object",
  "required": ["overview", "hourly_focus"],
  "properties": {
    "overview": {
      "type": "object",
      "required": ["focus_time"],
      "properties": {
        "focus_time": {"type": "string"}
      }
    },
    "hourly_focus": {
      "type": "array",
      "minItems": 24,
      "maxItems": 24,
      "items": {
        "oneOf": [
          {"type": ["string", "number"]},
          {
            "type": "object",
            "required": ["hour", "time"],
            "properties": {
              "hour": {"type": "number"},
              "time": {"type": "string"},
              "pct": {"type": "string"}
            }
          }
        ]
      }
    },
    "browser_highlights": {
      "type": "object",
      "properties": {
        "top_domains": {
          "type": "array"
        }
      }
    }
  }
}
