name: Generate and publish reports

on:
  push:
    branches: [ main ]
  schedule:
    # Run nightly at 02:00 UTC to regenerate reports from logs
    - cron: '0 2 * * *'

jobs:
  generate-and-publish:
    if: ${{ github.event_name != 'schedule' || vars.ENABLE_SCHEDULED_REPORTS == 'true' }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.12'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi

      - name: Generate reports for JSONL files
        run: |
          set -euo pipefail
          for p in logs/daily/*.jsonl; do
            [ -e "$p" ] || continue
            d=$(basename "$p" .jsonl)
            echo "Generating reports for $d"
            python3 tools/generate_reports.py "$d"
          done

      - name: Publish reports to reports-gh-pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./reports
          publish_branch: reports-gh-pages
          user_name: 'github-actions[bot]'
          user_email: '41898282+github-actions[bot]@users.noreply.github.com'
